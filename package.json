{
  "name": "surfforecast",
  "version": "1.0.0",
  "description": "A forecast api that provide a better forecast for surf, made with Nodejs, Typescript and TDD",
  "main": "src/server",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabriellopes00/surfing-app.git"
  },
  "author": "Gabriel Lopes",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gabriellopes00/surfing-app/issues"
  },
  "homepage": "https://github.com/gabriellopes00/surfing-app#readme",
  "scripts": {
    "start": "node ./dist/main/server.js",
    "build": "rimraf ./dist && tsc -p tsconfig-build.json",
    "lint": "eslint ./src ./tests --ext .ts",
    "lint:fix": "eslint ./src ./tests --ext .ts --fix",
    "style": "prettier --check ./**/*.ts",
    "style:fix": "prettier --write ./**/*.ts",
    "dev": "ts-node-dev  --respawn --transpile-only --ignore-watch node_modules --no-notify ./src/main/server.ts | pino-pretty -c",
    "test": "jest --passWithNoTests --noStackTrace --runInBand",
    "test:cache": "jest --clearCache",
    "test:watch": "yarn test:unit --watchAll",
    "test:unit": "yarn test -c jest-unit.config.js",
    "test:func": "yarn test --projects ./tests",
    "test:full": "yarn test:unit && yarn test:func --silent"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.3",
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/module-alias": "^2.0.0",
    "@types/mongoose": "^5.10.3",
    "@types/nock": "^11.1.0",
    "@types/node": "^14.14.22",
    "@types/pino": "^6.3.5",
    "@types/supertest": "^2.0.10",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "eslint": "^7.18.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "nock": "^13.0.6",
    "prettier": "^2.2.1",
    "supertest": "^6.1.1",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bcrypt": "^5.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongoose": "^5.11.13",
    "pino": "^6.11.0",
    "pino-pretty": "^4.5.0",
    "rimraf": "^3.0.2",
    "validator": "^13.5.2"
  },
  "_moduleAliases": {
    "@src": "dist/"
  }
}
